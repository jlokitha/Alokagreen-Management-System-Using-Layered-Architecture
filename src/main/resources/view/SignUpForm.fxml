                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </JFXButton>
            <Label fx:id="lblUserName" layoutX="44.0" layoutY="331.0" prefWidth="274.0" textFill="RED">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Label fx:id="lblPassword" layoutX="44.0" layoutY="413.0" prefWidth="274.0" textFill="RED">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            </children>
        </AnchorPane>
    </children>
