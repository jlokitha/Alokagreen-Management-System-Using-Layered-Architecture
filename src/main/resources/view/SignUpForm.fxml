    <children>
        <ImageView fitHeight="650.0" fitWidth="1000.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../assets/image/Log-In-Page.png" />
            </image>
        </ImageView>
        <AnchorPane layoutX="591.0" prefHeight="650.0" prefWidth="369.0">
            <children>
                <Label layoutX="97.0" layoutY="119.0" text="Sign Up" textFill="#139547">
                    <font>
                        <Font name="System Bold" size="40.0" />
                    </font>
                </Label>
                <Label layoutX="4.0" layoutY="210.0" text="Enter details below to create your account" textFill="#139547">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                </Label>
                <JFXTextField fx:id="txtUsername" focusColor="#139547" layoutX="69.0" layoutY="284.0" onAction="#txtUserNameOnAction" onMouseClicked="#txtUserNameOnMouseClicked" prefHeight="35.0" prefWidth="250.0" promptText="Username" unFocusColor="#727374">
                    <font>
                        <Font size="16.0" />
                    </font>
                </JFXTextField>
                <ImageView fitHeight="30.0" fitWidth="25.0" layoutX="39.0" layoutY="291.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../assets/icon/user_name.png" />
                    </image>
                </ImageView>
                <JFXPasswordField fx:id="txtPassword" focusColor="#139547" layoutX="69.0" layoutY="366.0" onAction="#txtPasswordOnAction" onMouseClicked="#txtPasswordOnMouseClicked" prefHeight="35.0" prefWidth="250.0" promptText="Password" unFocusColor="#727374">
                    <font>
                        <Font size="16.0" />
                    </font>
                </JFXPasswordField>
                <ImageView fitHeight="30.0" fitWidth="25.0" layoutX="39.0" layoutY="374.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../assets/icon/password.png" />
                    </image>
                </ImageView>
